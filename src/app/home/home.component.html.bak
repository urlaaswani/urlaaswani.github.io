<div class="container" [@myAnimation]='state' (click)="animate()">
<div class="container">
  <div class="info">
      <h1><strong> City:</strong>{{weather.city.name}}</h1>
      <h3><strong>longitude:</strong>{{weather.city.coord.lon}}</h3>
      <h3><strong>longitude:</strong>{{weather.city.coord.lat}}</h3>
      <h3><strong>Temperature</strong>:{{weather.list[0].main.temp}}</h3>
      <h3><b>tempMax:</b>{{weather.list[0].main.temp_max}}  </h3>
      <h3><b>tempMin: </b>{{weather.list[0].main.temp_min}}</h3>
      <h3> <b>The weather description:</b> {{weather.list[0].weather[0].description}}</h3>
      <h3> <strong>humidity :</strong>{{weather.list[0].main.humidity}}</h3>
    </div>
</div>